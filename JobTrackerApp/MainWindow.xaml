<Window x:Class="JobTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Application Tracker" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/job-seeker.ico"
        Background="#0a0e27">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4f46e5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Margin="5,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1e293b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Navigation Button Style -->
        <Style x:Key="ActiveNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="#6366f1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR NAVIGATION -->
        <Border Grid.Column="0" Background="#0f172a" BorderBrush="#1e293b" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <StackPanel Grid.Row="0" Margin="20,30,20,30">
                    <TextBlock Text="💼 Job Tracker" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Manage Applications" 
                               FontSize="12" 
                               Foreground="#64748b" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="10,20,10,0">
                    <Button x:Name="btnNavDashboard" 
                            Content="📊 Dashboard" 
                            Style="{StaticResource ActiveNavButtonStyle}"
                            Click="BtnNavDashboard_Click"/>

                    <Button x:Name="btnNavAddCompany" 
                            Content="➕ Add Company" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="BtnNavAddCompany_Click"/>

                    <Button x:Name="btnNavViewAll" 
                            Content="📋 All Companies" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="BtnNavViewAll_Click"/>

                    <Separator Background="#1e293b" Margin="10,20"/>

                    <Button x:Name="btnNavSettings" 
                            Content="⚙️ Settings" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="BtnNavSettings_Click"/>
                </StackPanel>

                <!-- Footer Stats -->
                <Border Grid.Row="2" Background="#1e293b" Margin="10,0,10,20" Padding="15" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Quick Stats" Foreground="#64748b" FontSize="11" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Total: " Foreground="#94a3b8" FontSize="12"/>
                            <TextBlock x:Name="txtSidebarTotal" Text="0" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Pending: " Foreground="#94a3b8" FontSize="12"/>
                            <TextBlock x:Name="txtSidebarPending" Text="0" Foreground="#f59e0b" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Frame x:Name="MainFrame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="#0a0e27"/>
    </Grid>
</Window>