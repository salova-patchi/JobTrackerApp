<Window x:Class="JobTrackerApp.EditCompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Company" Height="650" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#0a0e27">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4f46e5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="✏️ Edit Company" 
                   FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,25"/>

        <Border Grid.Row="1" Background="#1e293b" CornerRadius="12" Padding="25">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Company Name *" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtCompanyName" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Phone Number" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtPhone" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Email" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtEmail" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Location" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtLocation" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Technology Stack" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtTechStack" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Status *" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cmbStatus" Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBoxItem Content="Not Called"/>
                            <ComboBoxItem Content="Called"/>
                            <ComboBoxItem Content="Interview Scheduled"/>
                            <ComboBoxItem Content="Rejected"/>
                            <ComboBoxItem Content="Offer Received"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Remarks / Notes" Foreground="#94a3b8" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtRemarks" Style="{StaticResource ModernTextBoxStyle}" 
                                 Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="💾 Save Changes" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnSave_Click"
                    Background="#10b981"
                    Padding="30,12"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnCancel_Click"
                    Background="#64748b"
                    Padding="30,12"/>
        </StackPanel>
    </Grid>
</Window>